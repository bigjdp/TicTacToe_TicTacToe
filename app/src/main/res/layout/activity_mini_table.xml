<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idtech.danielpoag.finalfinalprojecttictactoetictactoe.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:collapseColumns="3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button"
                android:layout_column="0"
                android:onClick="miniOneClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button2"
                android:layout_column="1"
                android:onClick="miniTwoClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button3"
                android:layout_column="2"
                android:onClick="miniThreeClicked" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button4"
                android:layout_column="0"
                android:onClick="miniFourClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button5"
                android:layout_column="1"
                android:onClick="miniFiveClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button6"
                android:layout_column="2"
                android:onClick="miniSixClicked" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button7"
                android:layout_column="0"
                android:onClick="miniSevenClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button8"
                android:layout_column="1"
                android:onClick="miniEightClicked" />

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/button9"
                android:layout_column="2"
                android:onClick="miniNineClicked" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="back" />

</RelativeLayout>
